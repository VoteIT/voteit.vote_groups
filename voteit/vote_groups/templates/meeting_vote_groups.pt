<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="view.macro('arche:templates/base_view.pt', 'arche:templates/inline.pt')"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="voteit.vote_groups">
<body>
  <div metal:fill-slot="main-content">
  <h2 i18n:translate="">Vote groups</h2>

  <p tal:condition="ongoing_polls">
      <span class="glyphicon glyphicon-info-sign"></span>
      <tal:ts i18n:translate="ongoing_polls_notice">
          There are ongoing polls so groups can't be changed right now.
          You may reload the page when the polls have closed.
      </tal:ts>
  </p>

  <div class="btn-group hidden-print" role="group">
    <a class="btn btn-default"
       tal:condition="request.is_moderator"
       href="${request.resource_url(context, 'add_vote_group')}">
        <span class="glyphicon glyphicon-plus"></span>
        <tal:ts i18n:translate="">New vote group</tal:ts>
    </a>
    <a class="btn btn-default"
       tal:condition="request.is_moderator"
       href="javascript:window.print()">
        <span class="glyphicon glyphicon-print"></span>
        <tal:ts i18n:translate="">Print</tal:ts>
    </a>
    <a class="btn btn-default"
       tal:condition="has_qr and request.is_moderator"
       href="${request.resource_url(context, '_qr_voter_groups')}">
        <span class="glyphicon glyphicon-qrcode"></span>
        <tal:ts i18n:translate="">Apply vote rights</tal:ts>
    </a>

    <tal:delegation_controls condition="not request.is_moderator and len(vote_groups) > len(my_groups)">
      <a class="btn btn-default"
         tal:condition="show_all"
         href="${request.resource_path(context, 'vote_groups')}">
          <span class="glyphicon glyphicon-eye-close"></span>
          <tal:ts i18n:translate="">Show my groups</tal:ts> (${len(my_groups)})
      </a>
      <a class="btn btn-default"
         tal:condition="not show_all"
         href="${request.resource_path(context, 'vote_groups', query = {'show_all': '1'})}">
          <span class="glyphicon glyphicon-eye-open"></span>
          <tal:ts i18n:translate="">Show all groups</tal:ts> (${len(vote_groups)})
      </a>
    </tal:delegation_controls>
  </div>

  <br/><br/>

  <div class="list-group"
       tal:define="groups (request.is_moderator or show_all) and vote_groups.sorted() or my_groups">
    <div class="list-group-item" tal:repeat="vote_group groups">
    <form method="post"
          action="${request.resource_path(context, '__vote_group_save_roles__', query = {'vote_group': vote_group.name})}"
          data-roles-container>
      <tal:group tal:define="has_standins vote_groups.get_free_standins(vote_group)">

      <h2 tal:content="vote_group.title and vote_group.title or vote_group.name">Title</h2>

      <p tal:condition="vote_group.description" tal:content="vote_group.description"></p>

      <div class="row">
          <div class="col-xs-6">
              <tal:ts i18n:translate="">
                  Potential voters: <b i18n:name="count">${len(tuple(vote_group.primaries))}</b>
              </tal:ts>
          </div>
          <div class="col-xs-6">
              <tal:ts i18n:translate="">
                  Unregistered members: <b i18n:name="count">${len(vote_group.potential_members)}</b>
              </tal:ts>
          </div>
      </div>

      <div class="btn-group hidden-print" role="group"
          tal:condition="request.is_moderator">
          <a class="btn btn-default ${ongoing_polls and 'disabled' or None}"
             href="${request.resource_url(context, 'edit_vote_group', query = {'vote_group': vote_group.name})}"
             i18n:translate="">
              Edit
          </a>
          <button class="btn btn-default ${ongoing_polls and 'disabled' or None}"
             data-edit-roles
             i18n:translate="">
              Change roles
          </button>
          <button class="btn btn-primary"
             href=""
             data-save-roles
             i18n:translate="">
              Save roles
          </button>
          <a class="btn btn-default ${ongoing_polls and 'disabled' or None}"
             href="${request.resource_url(context, 'delete_vote_group', query = {'vote_group': vote_group.name})}"
             i18n:translate="">
              Delete
          </a>
      </div>

      <table class="table table-striped">
        <thead>
          <tr>
            <th i18n:translate="">Member</th>
            <th i18n:translate="">Role</th>
            <th i18n:translate="">Stand-in</th>
          </tr>
        </thead>
        <tbody>
          <tr tal:repeat="(userid, role) vote_group.items()">
            <td>
              <a tal:replace="structure request.creators_info([userid], portrait = False)">Userid</a>
            </td>
            <td data-select-roles>
                <select name="${userid}">
                    <option tal:repeat="(value, desc) role_choices.items()" value="${value}" tal:attributes="selected role==value">${desc}</option>
                </select>
                <span>${role_choices.get(role,role)}</span>
            </td>
            <td tal:define="(votes_for_user, votes_for_group) vote_groups.get_primary_for(userid);
                            voting_group vote_groups.get_voting_group_for(userid);
                            substitute_in_group userid in vote_group.assignments;">
              <tal:if condition="role == 'primary'">
              <a tal:condition="substitute_in_group"
                 tal:replace="structure request.creators_info([vote_group.assignments[userid]], portrait = False)">Userid</a>
              <tal:actions tal:condition="not ongoing_polls and (request.is_moderator or request.authenticated_userid == userid)">
                <a tal:condition="not substitute_in_group and has_standins"
                   class="btn btn-default btn-sm pull-right"
                   href="${request.resource_url(context, 'assign_vote', query = {'vote_group': vote_group.name, 'primary': userid})}"
                   i18n:translate="">Choose stand-in</a>
                <a tal:condition="not substitute_in_group and not has_standins"
                   class="btn btn-default btn-sm disabled pull-right"
                   href="#" i18n:translate="">No stand-ins available</a>
                <a tal:condition="substitute_in_group"
                   class="btn btn-default btn-sm pull-right"
                   href="${request.resource_url(context, 'release_standin', query = {'vote_group': vote_group.name, 'primary': userid})}"
                   i18n:translate="">Release stand-in</a>
              </tal:actions>
              </tal:if>
              <tal:if condition="votes_for_user">
                  <tal:if condition="votes_for_group == vote_group">
                      <tal:ts i18n:translate="">Substitute for</tal:ts> <a tal:replace="structure request.creators_info([votes_for_user], portrait = False)">User</a>
                  </tal:if>
                  <tal:if condition="not substitute_in_group and votes_for_group != vote_group">
                      <tal:ts i18n:translate="">Substitute in group</tal:ts> <em>${votes_for_group.title}</em>
                  </tal:if>
              </tal:if>
              <tal:if condition="role == 'standin' and voting_group and voting_group != vote_group and voting_group[userid] == 'primary'" i18n:translate="">
                  <tal:ts i18n:translate="">Voter in group</tal:ts> <em>${voting_group.title}</em>
              </tal:if>
            </td>
          </tr>
        </tbody>
      </table>


    </tal:group>
    </form>
    </div><!-- list-group-item -->
  </div>
  </div>
</body>
</html>
